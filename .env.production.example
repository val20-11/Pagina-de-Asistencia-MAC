ALLOWED_HOSTS=132.248.80.77,tudominio.com,www.tudominio.com

# ==============================================
# Security Settings - PRODUCCIÓN
# ==============================================
RATELIMIT_ENABLE=True
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ==============================================
# CORS Settings - PRODUCCIÓN
# ==============================================
# ⚠️ SOLO HTTPS - NO HTTP
# ⚠️ NO INCLUIR localhost
CORS_ALLOWED_ORIGINS=https://132.248.80.77,https://tudominio.com,https://www.tudominio.com
CSRF_TRUSTED_ORIGINS=https://132.248.80.77,https://tudominio.com,https://www.tudominio.com

