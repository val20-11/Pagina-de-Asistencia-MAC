DJANGO_ENV=production
DEBUG=False

# SECRET_KEY: ⚠️ GENERA UNA CLAVE ÚNICA Y SEGURA
# Genérala con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
