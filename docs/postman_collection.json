        {
          "name": "Get My Attendances",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/attendance/my/",
              "host": ["{{base_url}}"],
              "path": ["api", "attendance", "my", ""]
            },
            "description": "Obtener mis asistencias"
          },
          "response": []
        }
      ]
    }
  ]
}
