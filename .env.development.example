# ==============================================
# Django Settings - DESARROLLO
# ==============================================
DJANGO_ENV=local
DEBUG=True
SECRET_KEY=django-insecure-dev-key-change-in-production-12345

# ==============================================
# ALLOWED_HOSTS - DESARROLLO
# ==============================================
ALLOWED_HOSTS=localhost,127.0.0.1,nginx,backend

# ==============================================
# Security Settings - DESARROLLO (relajadas)
# ==============================================
RATELIMIT_ENABLE=False
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ==============================================
# CORS Settings - DESARROLLO
# ==============================================
# Incluye tanto HTTP como HTTPS para desarrollo
CORS_ALLOWED_ORIGINS=http://localhost,http://127.0.0.1,http://localhost:80,https://localhost,https://127.0.0.1,https://localhost:443
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1,https://localhost,https://127.0.0.1

# ==============================================
# Database - PostgreSQL (DESARROLLO)
# ==============================================
DB_ENGINE=postgresql
DB_NAME=mac_attendance
DB_USER=mac_user
DB_PASSWORD=mac_password_dev
DB_HOST=db
DB_PORT=5432

# ==============================================
# PostgreSQL (usado por docker-compose)
# ==============================================
